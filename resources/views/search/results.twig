{% extends 'base.base' %}
{% block content %}
    <div class="row m-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2>Search again</h2>
                </div>
                <div class="card-body">
                    {% embed 'search.partials._search' %}{% endembed %}
                </div>
            </div>
        </div>
    </div>
    <div class="row m-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2>Search Results</h2>
                </div>
                <div class="card-body">
                    {%  embed 'address.partials._addresstable' with {'addresses': results} %}{% endembed %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}