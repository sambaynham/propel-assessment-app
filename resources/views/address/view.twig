{% extends 'base.base' %}
{% block content %}
    <div class="row m-4">
        <div class="col col-4">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">{{ address.getFirstName }} {{ address.getLastName }}</h1>
                </div>
                <div class="card-body">
                    <address>
                        {{ address.getFirstName }} {{ address.getLastName }} <br>
                        <a href="mailto:{{ address.getEmail }}">{{ address.getEmail }}</a><br>
                        <a href="tel:{{ address.getPhone }}">{{ address.getPhone }}</a>
                    </address>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-4">
        <div class="col col-4">
            {% embed 'address.partials._addressoperations' with {'address': address} %}{% endembed %}
        </div>
    </div>
{% endblock %}